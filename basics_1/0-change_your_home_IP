#!/usr/bin/env bash
# This script changes localhost to resolve to 127.0.0.2 and facebook.com to 8.8.8.8 in /etc/hosts

# Add or update localhost to resolve to 127.0.0.2
sudo sed -i '/\slocalhost$/d' /etc/hosts
echo "127.0.0.2 localhost" | sudo tee -a /etc/hosts > /dev/null

# Add or update facebook.com to resolve to 8.8.8.8
sudo sed -i '/\sfacebook\.com$/d' /etc/hosts
echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts > /dev/null
